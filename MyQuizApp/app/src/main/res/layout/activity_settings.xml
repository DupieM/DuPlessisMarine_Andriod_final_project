<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/bt_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/back_arrow" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="10dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="About K-Pop Quiz"
        android:textAlignment="center"
        android:textColor="@color/text2"
        android:textSize="37sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/card2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="K-Pop Quiz is a app for any K-Pop lover or normal peole in general that wat to test their knowledge on questions related to K-Pop in general."
            android:textColor="@color/text3"
            android:textAlignment="center"
            android:textSize="23sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"

            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="General Settings"
        android:textAlignment="center"
        android:textColor="@color/text2"
        android:textSize="37sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/card2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textColor="@color/text3"
            android:textSize="27sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@color/text3"
            android:textSize="27sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-fi/ Mobile Data"
            android:textColor="@color/text3"
            android:textSize="27sp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player icon"
            android:textColor="@color/text3"
            android:textSize="27sp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Score Reset"
        android:textAlignment="center"
        android:textColor="@color/text2"
        android:textSize="37sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_score"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:paddingVertical="12dp"
        android:text="Reset High Score"
        android:backgroundTint="@color/light_purple"
        android:textColor="@color/text2"
        android:textSize="23sp"
        app:cornerRadius="40dp"
        />


</LinearLayout>