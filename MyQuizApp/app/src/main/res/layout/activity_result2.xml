<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/bt_final2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/back_arrow" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="10dp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        >

        <TextView

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="New High Score:"
            android:textColor="@color/text4"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_resultscore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0/what"
            android:textColor="@color/text4"
            android:textAlignment="center"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginTop="50dp"
            android:background="#C8B8EB"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Old Score on Category Screen"
            android:textColor="@color/text4"
            android:textSize="22sp"
            android:layout_marginTop="63dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"/>



    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standings"
        android:textColor="@color/text4"
        android:textAlignment="center"
        android:textSize="48sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_resultname2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nice try"
        android:textColor="@color/text4"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-38dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="80dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/avatar3"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/avatar4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-60dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/avatar2"
        />


    <ImageView
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_marginTop="-124dp"
        android:contentDescription="cat1 mascot"
        android:src="@drawable/podium" />

</LinearLayout>